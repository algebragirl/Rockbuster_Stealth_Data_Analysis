SELECT D.country,
	COUNT(DISTINCT A.customer_id) AS all_customer_count,
	COUNT(DISTINCT top_5_customers) AS top_customer_count
FROM customer A
	INNER JOIN address B ON A.address_id = B.address_id
	INNER JOIN city C ON B.city_id = C.city_id
	INNER JOIN country D ON C.country_id = D.country_id
	LEFT JOIN

	
	WITH top_5_customers(country,all-customer_count,top_customer_count) AS
		(SELECT A.customer_id,
			A.first_name,
			A.last_name,
			C.city,
			D.country,
			SUM(P.amount) AS total_amount_paid
		FROM payment P
		INNER JOIN customer A ON P.customer_id = A.customer_id
		INNER JOIN address B ON A.address_id = B.address_id
		INNER JOIN city C ON B.city_id = C.city_id
		INNER JOIN country D ON C.country_id = D.country_id
		WHERE C.city IN
			('Aurora', 'Atlixco', 'Xintai', 'Adoni', 'Dhule (Dhulia)',
			'Kurashiki', 'Pingxiang', 'Sivas', 'Celaya', 'So Leopoldo')
		GROUP BY A.customer_id,
			A.first_name,
			A.last_name,
			C.city,
			D.country
		ORDER BY SUM(P.amount) DESC
		LIMIT 5) AS top_5_customers

	
	ON D.country = top_5_customers.country
GROUP BY D.country
ORDER BY top_customer_count DESC
